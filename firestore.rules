rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isGroupMember(groupId) {
      return get(/databases/$(database)/documents/groups/$(groupId)).data.members.hasAny([request.auth.uid]);
    }

    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.createdBy;
      allow delete: if request.auth.uid == resource.data.createdBy;

      allow update: if
        // Allow any update by an existing member (for future features like changing group name)
        isGroupMember(groupId) ||

        // OR, allow a non-member to join, under strict conditions
        (
          // User must not already be a member
          !isGroupMember(groupId) &&
          // The request must be an update to the 'members' or 'memberInfo' field
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'memberInfo']) &&
          // Check that the user is only adding themselves to the members array
          request.resource.data.members == resource.data.members.append(request.auth.uid)
        );

      match /rankings/{userId} {
        allow read: if isGroupMember(groupId);
        allow create, update: if request.auth.uid == userId && isGroupMember(groupId);
      }

      match /{subcollection}/{albumId} {
         allow read: if isGroupMember(groupId);
         allow create, delete: if isGroupMember(groupId);
      }
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
    }
  }
}