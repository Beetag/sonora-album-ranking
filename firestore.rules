rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Securely checks if the requesting user is a member of the given group ID.
    function isGroupMember(groupId) {
      return exists(/databases/$(database)/documents/groups/$(groupId)) &&
             get(/databases/$(database)/documents/groups/$(groupId)).data.members.hasAny([request.auth.uid]);
    }

    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.createdBy;
      allow delete: if request.auth.uid == resource.data.createdBy;

      allow update: if
        isGroupMember(groupId) ||
        (
          !isGroupMember(groupId) &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'memberInfo']) &&
          request.resource.data.members == resource.data.members.append(request.auth.uid)
        );

      match /rankings/{userId} {
        // Allow read if EITHER it's a direct query and user is a member,
        // OR it's a collectionGroup query that we can validate through the document's data.
        allow read: if isGroupMember(groupId) || 
                      ('userInfo' in resource.data && 
                       'groupId' in resource.data.userInfo && 
                       isGroupMember(resource.data.userInfo.groupId));

        allow create, update: if request.auth.uid == userId && isGroupMember(groupId);
      }

      match /{subcollection}/{albumId} {
         allow read: if isGroupMember(groupId);
         allow create, delete: if isGroupMember(groupId);
      }
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
    }
  }
}